  %input{:type=>'text', :name=>'user', :id=>'user'}
  %br
  %label{:for=>'password'} Password
  %input{:type=>'password', :name=>'password', :id=>'password'}
  %br
  %input{:type=>'submit', :value=>'Login'}
  %br
  %a{:href=>'/signup'} Signup
