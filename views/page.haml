- title @resource.pretty_name
- menu :version, :edit, :history, :new
- footer do
  |
  %a{:href=> resource_path(@resource, :sha => @resource.latest_commit) } Permalink
  | Version
  %a.sha{:href => resource_path(@resource, :sha => @resource.latest_commit), :title => @resource.latest_commit.sha }= @resource.latest_commit.sha.truncate(8, '&#8230;')
  = "by #{@resource.latest_commit.committer.name}, #{date @resource.latest_commit.committer_date}"
~ @content
