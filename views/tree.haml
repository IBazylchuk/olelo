%ul#menu
  - if @object.prev_commit
    %li
      %a{:href=>object_path(@object, @object.prev_commit)} &laquo; Previous
  - if @object.next_commit
    %li
      %a{:href=>object_path(@object, @object.next_commit)} Next &raquo;
  - if !@object.head?
    %li
      %a{:href=> @object.path.abspath } Current
  %li
    %a{:href=>action_path(@object, :history) } History

#content
  %h1=@title

  %table
    %thead
      %tr
        %th Name
    %tbody
      %tr
        %td
          %a{:href=> (@object.path/'..').abspath }
            %img{:src => '/public/folder.png'}
            \..
      - @object.children.each do |child|
        %tr
          %td
            %a{:href=>object_path(child)}
              %img{:src => child.page? ? '/public/page.png' : '/public/folder.png'}
              =child.name
