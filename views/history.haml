- title :history_of.t(:path => @resource.title)
= flash_messages
%div
  %p&= :drag_drop_for_diff.t
%table.history
  %thead
    %tr
      %th= :message.t
      %th= :author.t
      %th= :date.t
  %tbody
    - @resource.history.each do |commit|
      %tr{:id =>"commit-#{commit}"}
        %td
          %a{:href=>resource_path(@resource, :version => commit)}&= commit.message.truncate(30)
          (
          %a{:href=> ('changes'/commit).urlpath }<>= :changes.t
          )
        %td&= commit.author.name
        %td= date commit.date
