- title :delete_page.t(:page => page.title)
%h1= title
%form(action='#{absolute_path page}' method='post')
  .box
    != flash_messages
    %input(type='hidden' name='_method' value='delete')
    %label(for='submit')= :really_delete.t
    %button#submit(name='submit' type='submit' accesskey='d')= :delete.t
    %button(type='button' accesskey='c' onclick='history.back()')= :cancel.t
