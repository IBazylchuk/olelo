%ul
  %li
    %a.action-home{:href=>resource_path(@resource, :path => Wiki::Config.main_page.urlpath), :accesskey=>'z'}= :home.t
  = breadcrumbs(@resource)
  - if @resource && !@resource.current?
    %li.noborder
      = :version.t
      %span.version{:title => @resource.tree_version}
        = @resource.tree_version.short
%ul.wiki
  - if @resource
    - if menu.include?(:version)
      - if @resource.previous_version
        %li
          %a.action-older{:href=>resource_path(@resource, :version => @resource.previous_version), :accesskey=>'o'}= :older.t
      - if !@resource.current?
        %li
          %a.action-current{:href=> @resource.path.urlpath, :accesskey=>'c'}= :current.t
      - if @resource.next_version
        %li
          %a.action-newer{:href=>resource_path(@resource, :version => @resource.next_version), :accesskey=>'n'}= :newer.t
    - if !@resource.new?
      %li
        = render_block(:view_menu) do
          %a.action-view{:href=> @resource.path.urlpath, :accesskey=>'v'}= :view.t
    %li
      - if @resource.namespace == :discussion
        %a.action-page{:href=> @resource.namespace_path.urlpath, :accesskey=>'p' }= :page.t
      - elsif @resource.namespace == :metadata
        %a.action-page{:href=> @resource.namespace_path.urlpath, :accesskey=>'p' }= :page.t
      - else
        %a.action-discuss{:href=> @resource.namespace_path(:discussion).urlpath, :accesskey=>'d' }= :discuss.t
    - if !@resource.new?
      %li
        - if @resource.page?
          %a.action-edit{:href=>action_path(@resource, :edit), :accesskey=>'e'}= :edit.t
        - else
          %a.action-edit= :edit.t
        %ul
          %li
            %a.action-new{:href=> (@resource.tree? ? @resource.path/'new' : 'new').urlpath, :accesskey=>'n'}= :new_page.t
          - if !@resource.path.blank?
            %li
              %a.action-move{:href=> action_path(@resource, :move) }= :move.t
            %li
              %a.action-delete{:href=> action_path(@resource, :delete) }= :delete.t
          - if @resource.namespace != :metadata
            %li
              %a.action-metadata{:href=> action_path(@resource.namespace_path(:metadata), :edit) }= :metadata.t
      %li
        %a.action-history{:href=>action_path(@resource, :history), :accesskey=>'h'}= :history.t
  - else
    %li
      %a.action-new{:href=>'/new', :accesskey=>'n'}= :new_page.t
