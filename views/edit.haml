#menu= menu :new, :current, :history, append ? :edit : :append
#main
  #sidebar=sidebar
  #content
    %h1=@title
    %form{:action => @object.path.urlpath, :method=>'post'}
      %input{:type=>'hidden', :name=> '_method', :value=>'put'}
      - if append
        %input{:type=>'hidden', :name=>'append', :value => 1 }
        %label Excerpt
        %pre&= @object.content.tail(200)
        %br
      %label{:for=>'content_area'} Content
      %textarea{:name=>'content', :cols=>120, :rows=>30, :id=>'content_area'}&= append ? '' : @object.content
      %br
      %label{:for=>'message'} Message
      %input{:type=>'text', :name=>'message', :id=>'message', :size => 50}
      %input{:type=>'submit', :value=>'Save'}
      %input{:type=>'reset', :value=>'Reset'}
      %br
