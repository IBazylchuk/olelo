%p
  %a{:href => resource_path(@page, :output => 'image') }
    %img{:src=> resource_path(@page, :output => 'image', :geometry => '640x480>'), :alt=>@page.name}
%h3 General
%table.zebra
  %tbody
    %tr
      %td Name
      %td&= @page.name
    %tr
      %td Format
      %td= @format
    %tr
      %td Geometry
      %td= @geometry
    - if @page.latest_commit
      %tr
        %td Last modified
        %td= date @page.latest_commit.date
      %tr
        %td Version
        %td.version= @page.latest_commit
- if @exif
  %h3 Exif
  %table.zebra
    %thead
      %tr
        %th Entry
        %th Value
    %tbody
      - @exif.each do |key, value|
        %tr
          %td&= key
          %td&= value
