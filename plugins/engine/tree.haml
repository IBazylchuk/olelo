%table.zebra
  %thead
    %tr
      %th= :name.t
      %th= :last_modified.t
      %th= :author.t
      %th= :message.t
      %th= :actions.t
  %tbody
    %tr
      %td.link{:colspan => 5}
        %a{:href=>resource_path(@tree, :path => '..')}
          %img{:src=>'/static/images/tree.png', :alt=>:tree.t}
          \..
    - @tree.children.each do |child|
      %tr
        %td.link= tree_link(child)
        %td= date(child.latest_commit.date)
        %td= child.latest_commit.author.name
        %td= child.latest_commit.message.truncate(50)
        %td
          - if child.tree?
            %a{:href=>action_path(child, :archive)}
              %img{:src=>'/static/images/archive.png', :alt=>:archive.t}
          - else
            %a{:href=>action_path(child, :edit)}
              %img{:src=>'/static/images/edit.png', :alt=>:edit.t}
          %a{:href=>action_path(child, :history)}
            %img{:src=>'/static/images/history.png', :alt=>:history.t}
