%table.zebra
  %tbody
    %tr
      %td Name
      %td&= @page.name
    - if @page.version
      %tr
        %td Last modified
        %td= date @page.version.date
      %tr
        %td Version
        %td.version= @page.version
    %tr
      %td Mime-Type
      %td= @page.mime
    %tr
      %td Download
      %td
        %a{:href=> resource_path(@page, :output => 'download')} Download File
